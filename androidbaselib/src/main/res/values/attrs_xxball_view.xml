<resources>
    <attr name="text_size" format="dimension" />
    <declare-styleable name="XXBallView">
        <attr name="ball_type" format="enum">
            <enum name="red" value="1" />
            <enum name="blue" value="2" />
        </attr>

        <attr name="num" format="string" />
        <attr name="selectable" format="boolean" />
        <attr name="checked" format="boolean" />
        <attr name="ball_color" format="color" />
        <attr name="text_size" />

    </declare-styleable>
</resources>
