<resources>
    <attr name="textSize" format="dimension"/>
    <attr name="ballColor" format="color"/>
    <attr name="selectable" format="boolean"/>
    <attr name="text" format="string"/>

    <declare-styleable name="XXBallView">

        <attr name="text"/>
        <attr name="selectable"/>
        <attr name="checked" format="boolean"/>
        <attr name="ballColor"/>
        <attr name="textSize"/>

    </declare-styleable>
    <attr name="startBallNum" format="integer"/>
    <attr name="endBallNum" format="integer"/>
    <attr name="ballNums" format="string"/>
    <attr name="checkAll" format="boolean"/>
    <attr name="columns" format="integer"/>
    <attr name="checkedNums" format="string"/>

    <declare-styleable name="XXBallViewLayout">
        <attr name="selectable"/>
        <attr name="ballColor"/>
        <attr name="textSize"/>
        <attr name="startBallNum"/>
        <attr name="endBallNum"/>
        <attr name="ballNums"/>
        <attr name="checkAll"/>
        <attr name="columns"/>
        <attr name="checkedNums"/>
        <attr name="rowSpace" format="dimension"/>
        <attr name="columnSpace" format="dimension"/>
        <attr name="ballDiameter" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="XXBallViewsLayout">
        <attr name="selectable"/>
        <attr name="ballColor"/>
        <attr name="textSize"/>
        <attr name="startBallNum"/>
        <attr name="endBallNum"/>
        <attr name="ballNums"/>
        <attr name="checkAll"/>
        <attr name="checkedNums"/>
    </declare-styleable>
</resources>
