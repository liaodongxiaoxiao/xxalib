<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xx_a_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ldxx.xxalib.activity.CustomCircleViewActivity"
    tools:showIn="@layout/activity_custom_circle_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <com.ldxx.android.base.view.XXBallView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:color="@color/btn_color2"
            app:text="美"
            app:textSize="20sp"
        />
        <com.ldxx.android.base.view.XXBallView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:color="@color/btn_color2"
            app:text="的"
            app:textSize="20sp"
        />

        <com.ldxx.android.base.view.XXBallView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:color="@color/btn_color2"
            app:text="国"
            app:textSize="20sp"
        />


    </LinearLayout>

    <TextView android:layout_width="40dp"
              android:layout_height="40dp"
              android:text="美"
              android:textColor="@color/btn_color2"
              android:textSize="20sp"/>
    <com.ldxx.android.base.view.DLayout
        android:id="@+id/d_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:column="4"
        app:text="我,爱,北,京,天,安,门">

    </com.ldxx.android.base.view.DLayout>

</LinearLayout>
