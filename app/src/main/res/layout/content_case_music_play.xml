<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ldxx.xxalib.activity.CaseMusicPlayActivity"
    tools:showIn="@layout/activity_case_music_play">
    <ListView
        android:id="@+id/music_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/content_case_music_item"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView android:id="@+id/music_img"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:paddingLeft="10dp"
                   tools:src="@drawable/album"
        />
        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/music_img"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="柠檬草的味道"
        />
        <TextView
            android:id="@+id/music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_title"
            android:layout_toRightOf="@id/music_img"
            android:paddingLeft="10dp"
            tools:text="蔡依林"
        />

        <ImageView
            android:id="@+id/music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/skip_next"/>
        <ImageView
            android:id="@+id/music_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/music_next"
            android:src="@drawable/play"/>
    </RelativeLayout>
</LinearLayout>
