    tools:showIn="@layout/activity_text_fonts">

    <TextView
        android:id="@+id/fonts_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 0123 安卓"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fonts_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_0123"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/fonts_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 0123 安卓"
        android:textSize="30dp"
