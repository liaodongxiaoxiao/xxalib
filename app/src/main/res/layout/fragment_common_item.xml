<?xml version="1.0" encoding="utf-8"?>
<com.ldxx.android.base.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background_color">

    <TextView
        android:id="@+id/common_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="12dp"
        android:textColor="@color/item_text_color"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/common_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_item_title"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/item_text_color"
        tools:text="Description" />

</com.ldxx.android.base.view.SquareLayout>