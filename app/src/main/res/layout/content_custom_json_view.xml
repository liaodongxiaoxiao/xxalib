<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ldxx.xxalib.activity.CustomJsonViewActivity"
    tools:showIn="@layout/activity_custom_json_view">
    <com.ldxx.android.base.view.GradientTextView
        android:text="JsonView 使用 -- JsonView Use"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        app:start_color="@color/cardview_dark_background"
        app:end_color="@color/btn_color3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pm2_5"
    />
    <com.ldxx.android.base.view.JsonTextView
        android:id="@+id/pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
